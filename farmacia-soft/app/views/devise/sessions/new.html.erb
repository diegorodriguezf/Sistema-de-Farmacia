<body class="cyan">
  <div id="loader-wrapper">
      <div id="loader"></div>        
      <div class="loader-section section-left"></div>
      <div class="loader-section section-right"></div>
  </div>

  <div id="login-page" class="row">
    <div class="col s5 z-depth-4 card-panel">
      <div id="card-alert" class="card red" style="display:none;">
           <div class="card-content white-text">
              <p><i class="mdi-alert-error"></i> Error : <%= notice%> </p>
           </div>
          <button type="button" class="close white-text" data-dismiss="alert" aria-label="Close">
               <span aria-hidden="true">×</span>
          </button>
       </div>
        <%= simple_form_for(resource, as: resource_name, url:sign_in_user_path,validate: true,remote:true,html: { class: 'login-for'}) do |f| %>
        <div class="row">
          <div class="input-field col s12 center">
            <%= image_tag('/images/user_avatar.png', class: "circle responsive-img valign profile-image-login") %>
            <p class="center login-form-text">    LOGIN DE USUARIO     </p>
          </div>
       
          <div class="input-field col s12">
            <i class="mdi-social-person-outline prefix"></i>
              <%= f.text_field :username, autofocus: true, autocomplete: "username",class: 'validate'  %>
               <%= f.label 'Usuario',class: "center-align" %><br />
          </div>
          <div class="input-field col s12">
            <i class="mdi-action-lock-outline prefix"></i>
                <%= f.password_field :password, autocomplete: "off"%>
                <%= f.label 'Contraseña' %><br />

          </div>       
          <div class="input-field col s12 m12 l12  login-text">
            <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me, id: 'remember-me' %>
              <%= f.label 'Recordar',for: 'remember-me' %>

            <% end -%>
        </div>
          <div class="input-field col s12">
             <%= f.submit "Ingresar", class: "btn waves-effect waves-light col s4 offset-s4",name:'action' %>
          </div>
        </div>

     <% end %>
    </div>
  </div>

</body>
