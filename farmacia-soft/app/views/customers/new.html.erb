<div class="row">
     <div class="col s6 offset-s2">
         <div class="card-panel">
             <% if flash[:notice]%>
                 <div id="card-alert" class="card green col s10 offset-s1">
                    <div class="card-content white-text">
                       <%= flash[:notice] %>.
                     </div>
                 </div>
              <% end %>
            <h4 class="header2">Customer Form</h4>
            <div class="row">
               <%= simple_form_for(@customer,url:customer_create_path,html:{autocomplete:'off'},:validate => true) do |f| %>
                     <%= render 'customers/partials/fields', f: f %>
              <% end %>
            </div> 
         </div>    
     </div>
</div>     

